<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>PetianoServlet</servlet-name>
        <servlet-class>br.ufms.facom.petsistemas.controller.petiano.PetianoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GerenciadorServlet</servlet-name>
        <servlet-class>br.ufms.facom.petsistemas.controller.GerenciadorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NoticiaServlet</servlet-name>
        <servlet-class>br.ufms.facom.petsistemas.controller.noticia.NoticiaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PetianoServlet</servlet-name>
        <url-pattern>/index</url-pattern>
        <url-pattern>/petiano</url-pattern>
        <url-pattern>/exibirPetianoCPF</url-pattern>
        <url-pattern>/listarPetiano</url-pattern>
        <url-pattern>/buscarPetiano</url-pattern>
        <url-pattern>/novoPetiano</url-pattern>
        <url-pattern>/salvarPetiano</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NoticiaServlet</servlet-name>
        <url-pattern>/noticia</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
